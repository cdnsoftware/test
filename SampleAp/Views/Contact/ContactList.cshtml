@model IEnumerable<SampleAp.Data.Entities.Contact>
@using SampleAp.Models
@{
    int i = 0;
}

<table id="example" class="table table-striped notification_table table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>S.NO. </th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Knick Name</th>
            <th>Display As</th>
            <th>Date Of Birth(dd/MM/yyyy)</th>
            <th>Phone Number</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Knickname</td>
                @{
                        var varDisplayAs = "";

                        if (item.MasterDisplayAsId == (int)vmCommon.eDisplayAs.FirstLast)
                        {
                            varDisplayAs = item.FirstName + " " + item.LastName ;
                        }
                        else if (item.MasterDisplayAsId == (int)vmCommon.eDisplayAs.LastFirst)
                        {
                            varDisplayAs = item.LastName + " " + item.FirstName;
                        }
                        else if (item.MasterDisplayAsId == (int)vmCommon.eDisplayAs.Knickname)
                        {
                            varDisplayAs = item.Knickname ;
                        }
                }
                <td>@varDisplayAs ( @item.MasterDisplayAsList.DisplayAs)</td>
                <td>@(string.Format("{0:dd/MM/yyyy}", item.DateOfBirth))</td>
                <td>@item.PhoneNumber</td>
                <td>
                    <a href="#" onclick="GetPopUp(@item.Id,'@Url.Content("~/Contact/CreateContact")', 'Edit contact details', 'Edit');" title="Edit"><i class="fa fa-fw fa-edit"></i></a>
                </td>
                <td>
                    <a href="@Url.Action("DeleteContact", "Contact", new { @id = item.Id })" onclick="return confirm('Are you sure?')"  title="Delete"><i class="fa fa-trash-o"></i></a>

                </td>
            </tr>
            i++;
        }

    </tbody>
</table>
